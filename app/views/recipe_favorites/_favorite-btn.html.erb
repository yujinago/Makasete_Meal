<% if recipe.favorited_by?(current_user) %>
  <%= link_to recipe_recipe_favorites_path(recipe), method: :delete, remote: true do %>
    <div class="bg-white rounded p-1">
      <i class="fa-solid fa-heart fa-2xl" style="color: #FF5252;"></i>
    </div>
  <% end %>
<% else %>
  <%= link_to recipe_recipe_favorites_path(recipe), method: :post, remote: true do %>
    <div class="bg-white rounded p-1">
      <i class="fa-solid fa-heart fa-2xl" style="color: #a0a4ac;"></i>
    </div>
  <% end %>
<% end %>