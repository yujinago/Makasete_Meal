<div class="container">
  <div class="row">
    <% if params[:category_id] %>
      <h1 class="col-lg-8 text-center my-5 mx-auto"><%= @recipe_category.name %>一覧(全<%= @category_recipe_all.count %>件)</h5></h1>
      <%= link_to "レシピ一覧に戻る", recipes_path %>
    <% else %>
      <h1 class="col-lg-8 text-center my-5 mx-auto">作ったレシピ一覧(全<%= @recipe_all.count %>件)</h5></h1>
    <% end %>
  </div>
  <% if @recipes.present? %>
    <div class="row">
      <div class="col-12 d-flex">
        <div class="mr-auto">
          <%= link_to '新しい順', recipes_path(latest: "true") %>
          |<%= link_to '古い順', recipes_path(old: "true") %>
          |<%= link_to '評価の高い順', recipes_path(star_count: "true") %>
        </div>
        <div>
          <%= form_with model: @recipe, url: recipes_path, method: :get do |f| %>
            <%= f.collection_select :category_id, @recipe_categories, :id, :name, include_blank: "カテゴリー検索"  %>
            <%= button_tag type: "submit", class:"btn btn-default" do %>
              <i class="fa-solid fa-magnifying-glass"></i>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  <% else %>
    <h2 class="text-center mt-5">まだレシピを保存していません。</h2>
    <div class="text-center mt-3">
      <%= link_to "料理を作る", new_recipe_path, class:"btn btn-outline-secondary" %>
    </div>
  <% end %>
  <div class="row">
    <div class="col-12">
      <table class='table'> 
        <tbody>
          <% @recipes.each do |recipe| %>
            <tr>
              <td><%= image_tag recipe.get_recipe_image(500, 500), size: "100x100", class: "rounded" %></td>
              <td><%= link_to recipe.name, recipe_path(recipe.id) %></td>
              <td><%= recipe.recipe_category.name %></td>
              <td></td>
              <td><%= render 'show_rate', recipe: recipe %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="d-flex justify-content-center mt-3">
        <%= paginate @recipes %>
      </div>
    </div>
  </div>
</div>