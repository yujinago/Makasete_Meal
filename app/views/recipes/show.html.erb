<div class="container">
  <div class="row">
    <div class="col-12 text-right ml-auto">
      <%= link_to recipes_path do %>
        レシピ一覧へ
        <i class="fa-regular fa-hand-point-right"></i>
      <% end %>
    </div>
  </div>
  <div class="row">
    <h1 class="col-lg-8 text-center mt-5 mx-auto">作ったレシピ詳細</h1>
  </div>
  <div class="row">
    <div class="col-lg-4 my-3">
      <div class="text-center">
        <div class="d-inline-block position-relative">
          <%= image_tag @recipe.get_recipe_image(500, 500), size: "275x275", class: "rounded" %>
          <div id="favorite-btn_<%= @recipe.id %>" class="d-flex position-absolute favorite">
            <%= render 'recipe_favorites/favorite-btn', recipe: @recipe %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-8 my-3 mx-auto">
      <div class="border border-dark p-2 text-center font-weight-bold">
        <p class="my-auto"><%= @recipe.name %></p>
      </div>
      <div class="border-right border-bottom border-left border-dark">
        <div class="d-md-flex border-bottom">
          <p class="my-auto ml-1 font-weight-bold">レシピURL&emsp;:</p>
          <p class="my-auto ml-2"><a href="<%= @recipe.url %>">楽天レシピで詳細を確認する</a></p>
        </div>
        <div class="d-md-flex border-bottom">
          <p class="my-auto ml-1 font-weight-bold">カテゴリー名:</p>
          <p class="my-auto ml-2"><%= @recipe.recipe_category.name %></p>
        </div>
        <div class="d-md-flex border-bottom">
          <p class="my-auto ml-1 font-weight-bold">レシピ投稿者:</p>
          <p class="my-auto ml-2"><%= @recipe.poster_name %></p>
        </div>
        <div class="d-md-flex border-bottom">
          <p class="my-auto ml-1 font-weight-bold">調理時間目安:</p>
          <p class="my-auto ml-2"><%= @recipe.cook_time %></p>
        </div>
        <div class="d-md-flex border-bottom">
          <p class="my-auto ml-1 font-weight-bold">費用の目安&emsp;:</p>
          <p class="my-auto ml-2"><%= @recipe.cost %></p>
        </div>
        <div class="border-bottom">
          <p class="my-auto ml-1 font-weight-bold">材料名の一覧:</p>
          <p class="my-auto ml-2"><%= @recipe.foodstuff_name_format %></p>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12 my-3 mx-auto">
      <div class="form-group">
        <h2>メモ</h2>
        <%= text_area_tag 'memo', @recipe.memo, placeholder: "ここにメモすることができます。", size: "60x5", class: "w-100", readonly: true %>
      </div>
      <div class="form-group d-flex">
        <h2 class="mr-4">星</h2>
        <div class="mt-1"><%= render 'show_rate', recipe: @recipe %></div>
      </div>
      <div class="text-right">
        <%= link_to "編集する", edit_recipe_path(@recipe), class: "btn btn-outline-info mr-4" %>
        <%= link_to "削除する", @recipe, method: :delete, data: { confirm: 'このレシピ詳細のデータが消えてしまいます。本当に消しますか？' }, class: "btn btn-outline-danger" %>
      </div>
    </div>
  </div>
</div>