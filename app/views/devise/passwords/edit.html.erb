<div class="container">
  <div class="row">
    <div class="col-md-7 mx-auto">
      <h1 class="my-5 text-center">パスワードを変更します</h1>
      <%= form_with model: @user, url: user_password_reset_path, method: :patch do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>
        <div class="d-lg-flex justify-content-between mt-2">
          <h5><%= f.label :password, "新しいパスワード" %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上):</em>
            <% end %>
          </h5>
          <div class="text-center">
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
          </div>
        </div>
        <div class="d-lg-flex justify-content-between mt-2">
          <h5><%= f.label :password_confirmation, "新しいパスワード(確認用):" %></h5>
          <div class="text-center">
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
        </div>
        <div class="text-center mt-4">
          <%= f.submit "パスワードを変更する", class: "btn btn-outline-info" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row justify-content-lg-left mt-5">
    <div class="col-lg-5 my-3 text-center">
      <div class="mt-4">
        <%= link_to "ログイン画面に戻る", new_session_path(resource_name), class: "btn btn-outline-secondary" %>
      </div>
    </div>
  </div>
</div>
