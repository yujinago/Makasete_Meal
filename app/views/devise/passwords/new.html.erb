<div class="container">
  <div class="row">
    <div class="col-md-7 mx-auto">
      <h1 class="my-5 text-center">パスワードをお忘れですか?</h1>
      <%= form_with model: @user, url: user_password_path, method: :post do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="d-sm-flex justify-content-between mt-2">
          <h5><%= f.label :email, "メールアドレス:" %></h5>
          <div class="text-center">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
          </div>
        </div>
        <div class="text-center mt-4">
          <%= f.submit "パスワードのリセットメールを送信", class: "btn btn-outline-info" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row justify-content-lg-left mt-5">
    <div class="col-lg-5 my-3 text-center">
      <div class="mt-4">
      <%= link_to "ログイン画面に戻る", new_session_path(resource_name), class: "btn btn-outline-secondary" %>
      </div>
    </div>
  </div>
</div>
