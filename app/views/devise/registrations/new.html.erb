<div class="container">
  <div class="row">
    <div class="col-7 mx-auto">
      <h1 class="my-3 text-center">新規会員登録</h4>
      <%= form_with model: @user, url: user_registration_path do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <table class="table table-borderless">
          <!-- mdより下の画面幅の時に表示 -->
          <%= render 'devise/registrations/under-md', f: f, minimum_password_length: @minimum_password_length %>
          <!-- md以上の画面幅の時に表示 -->
          <%= render 'devise/registrations/md-or-over', f: f, minimum_password_length: @minimum_password_length %>
        </table>
      <% end %>
    </div>
  </div>
  <div class="row justify-content-md-center">
    <div class="col-md-4 my-3 text-center">
      <h4 class="mb-3">既に登録済みの方</h4>
      <%= render "devise/shared/links" %>からログインしてください。
    </div>
    <div class="col-md-4 my-3 d-flex align-items-end justify-content-center">
      もしくは
    </div>
    <div class="col-md-4 my-3 d-flex align-items-end justify-content-center">
      <div class="border p-2">Googleでログイン</div>
    </div>
  </div>
</div>
  
