<div class="mr-md-5">
  <%= form_with url: search_path, local: true, method: :get do |f| %>
    <%= f.text_field :word, placeholder: "キーワード" %>
    <%= f.hidden_field :range, :value => "Restaurant" %>
    <%= f.select :search, options_for_select([["店名","name"], ["住所","address"], ["営業時間","open_time"], ["定休日","legular_holiday"]]) %>
    <%= button_tag type: "submit", class:"btn btn-default" do %>
      <i class="fa-solid fa-magnifying-glass"></i>
    <% end %>
  <% end %>
</div>
<div>
  <%= form_with model: @restaurant, url: restaurants_path, method: :get do |f| %>
    <%= f.collection_select :genre_id, @restaurant_genres, :id, :name, include_blank: "ジャンル検索" %>
    <%= button_tag type: "submit", class:"btn btn-default" do %>
      <i class="fa-solid fa-magnifying-glass"></i>
    <% end %>
  <% end %>
</div>